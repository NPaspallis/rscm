<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.aspectsense.rscm.runtime"
      android:versionCode="1"
      android:versionName="1.0">

    <application android:label="@string/app_name">

        <service android:name=".ContextService">
            <intent-filter>
                <!-- These are the interfaces supported by the service, which you can bind to. -->
                <action android:name="org.aspectsense.rscm.IContextAccess" />
                <action android:name="org.aspectsense.rscm.IContextManagement" />
            </intent-filter>
        </service>

        <receiver android:name=".PackageBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>