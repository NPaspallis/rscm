<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.aspectsense.rscm.runtime"
      android:versionCode="2"
      android:versionName="0.3.0">

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="15"/>

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">

        <service android:name=".ContextService">
            <intent-filter>
                <!-- These are the interfaces supported by the service, which you can bind to. -->
                <action android:name="org.aspectsense.rscm.IContextAccess" />
                <action android:name="org.aspectsense.rscm.IContextManagement" />
            </intent-filter>
        </service>

        <receiver android:name=".PackageBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

        <activity android:name=".ui.ActivityPreferences"
                  android:label="@string/RSCM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.ActivityPluginViewer"
                  android:label="@string/RSCM_Plugin_viewer"/>

        <activity android:name=".ui.ActivityDatabaseViewer"
                  android:label="@string/RSCM_Database_viewer"/>
        <activity android:name=".ui.ActivityContextEmulator"/>

    </application>

</manifest>